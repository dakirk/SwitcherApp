<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.switcherApp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.david.switcherApp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.david.switcherApp.LevelScreen" />
        <activity android:name="com.example.david.switcherApp.IntroSlides" />
        <activity android:name="com.example.david.switcherApp.EndGame" />
        <activity android:name="com.example.david.switcherApp.level_select"></activity>
    </application>

</manifest>